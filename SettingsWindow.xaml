<Window x:Class="AiAssistant.SettingsWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    Title="AI Assistant Settings" 
        Height="600" 
        Width="600"
        WindowStartupLocation="CenterScreen"
   ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
       <RowDefinition Height="*"/>
  <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
  Text="AI Provider Settings" 
       FontSize="20" 
     FontWeight="Bold" 
       Margin="0,0,0,20"/>

      <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
         <StackPanel>
        <!-- API Provider Selection -->
   <TextBlock Text="API Provider:" FontWeight="SemiBold" Margin="0,0,0,5"/>
     <ComboBox x:Name="ApiProviderComboBox" 
   SelectionChanged="ApiProviderComboBox_SelectionChanged"
   Margin="0,0,0,15">
      <ComboBoxItem Content="OpenAI" Tag="OpenAI"/>
  <ComboBoxItem Content="Azure OpenAI" Tag="Azure"/>
     </ComboBox>

  <!-- OpenAI Settings -->
       <GroupBox x:Name="OpenAISettingsGroup" Header="OpenAI Settings" Padding="10" Margin="0,0,0,15">
        <StackPanel>
          <TextBlock Text="API Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
 <PasswordBox x:Name="OpenAIApiKeyBox" Margin="0,0,0,10"/>
   
<TextBlock Text="Model:" FontWeight="SemiBold" Margin="0,0,0,5"/>
             <TextBox x:Name="ModelTextBox" Text="gpt-4" Margin="0,0,0,5"/>
     <TextBlock Text="(e.g., gpt-4, gpt-3.5-turbo)" 
         FontSize="11" 
   Foreground="Gray" 
     Margin="0,0,0,10"/>
 </StackPanel>
     </GroupBox>

       <!-- Azure Settings -->
     <GroupBox x:Name="AzureSettingsGroup" Header="Azure OpenAI Settings" Padding="10" Margin="0,0,0,15">
         <StackPanel>
   <TextBlock Text="Endpoint:" FontWeight="SemiBold" Margin="0,0,0,5"/>
      <TextBox x:Name="AzureEndpointTextBox" Margin="0,0,0,5"/>
           <TextBlock Text="(e.g., https://your-resource.openai.azure.com/)" 
            FontSize="11" 
  Foreground="Gray" 
      Margin="0,0,0,10"/>

  <TextBlock Text="API Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
  <PasswordBox x:Name="AzureApiKeyBox" Margin="0,0,0,10"/>

       <TextBlock Text="Deployment Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
 <TextBox x:Name="DeploymentNameTextBox" Text="gpt-4" Margin="0,0,0,5"/>
 <TextBlock Text="(The name of your Azure OpenAI deployment)" 
     FontSize="11" 
Foreground="Gray"/>
      </StackPanel>
      </GroupBox>

      <!-- Instructions -->
   <Border Background="#E3F2FD" 
        BorderBrush="#2196F3" 
   BorderThickness="1" 
     CornerRadius="5" 
  Padding="10"
          Margin="0,10,0,0">
    <StackPanel>
      <TextBlock Text="Usage Instructions:" FontWeight="Bold" Margin="0,0,0,5"/>
       <TextBlock TextWrapping="Wrap">
    - Press Ctrl + Win + A while text is selected to polish it
        </TextBlock>
<TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
- The application runs in the system tray
        </TextBlock>
   <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
     - Right-click the tray icon for options
       </TextBlock>
   </StackPanel>
         </Border>
   </StackPanel>
        </ScrollViewer>

  <!-- Buttons -->
 <StackPanel Grid.Row="2" 
    Orientation="Horizontal" 
 HorizontalAlignment="Right" 
        Margin="0,20,0,0">
     <Button Content="Save" 
     Click="SaveButton_Click" 
       Width="100" 
       Height="35" 
       Margin="0,0,10,0"
         Background="#4CAF50"
       Foreground="White"
          BorderThickness="0"
        Cursor="Hand"/>
  <Button Content="Cancel" 
     Click="CancelButton_Click" 
       Width="100" 
    Height="35"
 Background="#757575"
     Foreground="White"
    BorderThickness="0"
    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
